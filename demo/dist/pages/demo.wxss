@import "./../components/nav.wxss";

.home_bg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.we-container {
  width: 100%;
  height: 100%;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  overflow: hidden;
  z-index: 1;
}
.we-wrapper {
  position: absolute;
  top: 0;
  width: 100%;
  height: calc(100% - 200rpx);
  z-index: 1;
  display: flex;
  transition-property: transform;
  padding: 128rpx 0 25rpx 105rpx;
  box-sizing: border-box;
}

.we-container-vertical > .we-wrapper {
  flex-direction: column;
}
.we-slide {
  flex-shrink: 0;
  position: relative;
  transform: scale(0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 500rpx;
  margin: 0 25rpx 25rpx;
  box-sizing: border-box;
  color: #fff;
  border-radius: 20rpx;
}

.we-slide:nth-child(1) {
  background-color: #4390ee;
}
.we-slide:nth-child(2) {
  background-color: #ca4040;
}
.we-slide:nth-child(3) {
  background-color: #ff8604;
}

/* 标题文字 */
.wc-title {
  line-height: 128rpx;
  display: flex;
  text-align: center;
  font-size: 28rpx;
  color: #888;
}
.wc-title view {
  flex: 1;
}
.wc-title-active {
  color: #000;
  color: 000;
  opacity: 1;
  transform: scale(1.3);
  transition: 0.6s;
}

/* 卡片样式 */
.wc-con-active0 {
  transform: scale(1);
  transition: 0.6s;
  box-shadow: 0 0 24px 0 rgba(241, 137, 71, 0.22),
    0 24px 24px 0 rgba(241, 137, 71, 0.3);
}
.wc-con-active1 {
  transform: scale(1);
  transition: 0.6s;
  box-shadow: 0 0 24px 0 rgba(235, 51, 73, 0.22),
    0 24px 24px 0 rgba(235, 51, 73, 0.3);
}
.wc-con-active2 {
  transform: scale(1);
  transition: 0.6s;
  box-shadow: 0 0 24px 0 rgba(47, 128, 237, 0.22),
    0 24px 24px 0 rgba(47, 128, 237, 0.3);
}

.img {
  width: 100%;
  height: auto;
}

.packet-text {
  margin-top: 100rpx;
  text-align: center;
}
.pt-txt1 {
  font-size: 36rpx;
}
.pt-txt2 {
  margin-top: 20rpx;
  font-size: 24rpx;
  opacity: 0.7;
}
